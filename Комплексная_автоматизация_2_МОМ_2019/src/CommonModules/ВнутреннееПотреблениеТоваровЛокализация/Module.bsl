	|	ПО Таблица.КатегорияЭксплуатации = КатегорииЭксплуатации.Ссылка
	|ГДЕ
	|	ЕСТЬNULL(КатегорииЭксплуатации.ИнвентарныйУчет, ЛОЖЬ)
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	Таблица.НомерСтроки КАК НомерСтроки,
	|	КОЛИЧЕСТВО(ТаблицаДублей.НомерСтроки) <> 0 КАК ЕстьОшибкиДубль
	|ИЗ
	|	Таблица КАК Таблица
	|	ЛЕВОЕ СОЕДИНЕНИЕ Таблица КАК ТаблицаДублей
	|	ПО Таблица.ИнвентарныйНомер = ТаблицаДублей.ИнвентарныйНомер
	|		И Таблица.НомерСтроки <> ТаблицаДублей.НомерСтроки
	|
	|СГРУППИРОВАТЬ ПО
	|	Таблица.НомерСтроки";

	Запрос = Новый Запрос(ТекстЗапроса);
	Запрос.УстановитьПараметр("Таблица", Объект.Товары.Выгрузить(, "НомерСтроки, КатегорияЭксплуатации, ИнвентарныйНомер"));
	
	Результат = Запрос.Выполнить();
	Если Не Результат.Пустой() Тогда
		
		ШаблонОшибкаПустойИнвентарныйНомер = НСтр("ru='Не заполнена колонка ""Инвентарный номер""
			|в строке %НомерСтроки% списка ""Товары""'");
		
		ШаблонОшибкаДубль = НСтр("ru='Инвентарный номер ""%ИнвентарныйНомер%""
			|в строке %НомерСтроки% списка ""Товары"" повторяется в других строках документа'");
		
		Выборка = Результат.Выбрать();
		Пока Выборка.Следующий() Цикл
			
			СтрокаТЧ = Объект.Товары[Выборка.НомерСтроки-1];
			Если ПустаяСтрока(СтрокаТЧ.ИнвентарныйНомер) Тогда
				ТекстСообщения = СтрЗаменить(ШаблонОшибкаПустойИнвентарныйНомер, "%НомерСтроки%", СтрокаТЧ.НомерСтроки);
			ИначеЕсли Выборка.ЕстьОшибкиДубль Тогда
				ТекстСообщения = СтрЗаменить(ШаблонОшибкаДубль, "%ИнвентарныйНомер%", СтрокаТЧ.ИнвентарныйНомер);
				ТекстСообщения = СтрЗаменить(ТекстСообщения, "%НомерСтроки%", СтрокаТЧ.НомерСтроки);
			Иначе
				Продолжить;
			КонецЕсли;
			Поле = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Товары", Выборка.НомерСтроки, "ИнвентарныйНомер");
			
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения, Объект, Поле, "Объект", Отказ);
			
		КонецЦикла;
		
	КонецЕсли;
	
