	Запрос.УстановитьПараметр("Организация", Объект.Организация);
	Запрос.УстановитьПараметр("Дата", Объект.Дата);
	Запрос.УстановитьПараметр("СписокОС", Объект.ОС.ВыгрузитьКолонку("ОсновноеСредство"));
	
	Результат = Запрос.Выполнить();
	
	Если Результат.Пустой() Тогда
		Возврат;
	КонецЕсли;
	
	Выборка = Результат.Выбрать();
	Выборка.Следующий();
	
	ТекстСообщения = НСтр("ru = 'Дата принятия к учету должна быть позже даты поступления предметов лизинга %1'");
	ТекстСообщения = СтрШаблон(ТекстСообщения, Выборка.Дата);
	ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения, Объект, "Дата",, Отказ); 
	
