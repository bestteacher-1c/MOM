	СписокПолей.Добавить("Организация");
	СписокПолей.Добавить("Комитент", 				   НСтр("ru='Организация-комитент'"));
	СписокПолей.Добавить("АналитикаУчетаНоменклатуры", НСтр("ru='Аналитика номенклатуры'"));
