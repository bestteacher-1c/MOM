	// "Элемент" - элемент тела компоновки данных;
	ПараметрыПоиска.Вставить("ВозвращаемыйТип", "Элемент");
	
	// "Заголовок" или "Подвал".
	ПараметрыПоиска.Вставить("ТипМакета", "Заголовок");
	
	Возврат ПараметрыПоиска;
	
