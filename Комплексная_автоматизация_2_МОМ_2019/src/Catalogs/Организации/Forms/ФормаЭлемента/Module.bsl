	КонецЕсли;
	
	Результат.Вставить("ДатаРегистрации","ДатаРегистрации");
	Результат.Вставить("КодОКВЭД","КодОКВЭД");
	
	Результат.Вставить("КодПоОКАТО","РегистрацияВНалоговомОргане.ОКАТО");
