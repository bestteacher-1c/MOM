				ЭтаФорма["ОсновноеИзделие" + ИмяРеквизита] = Неопределено;
			КонецЦикла;
			
		КонецЕсли;
		
	Иначе
		
		СписокРеквизитов = СписокРеквизитовОсновноеВходящееИзделие();
		
		Для каждого ИмяРеквизита Из СписокРеквизитов Цикл
