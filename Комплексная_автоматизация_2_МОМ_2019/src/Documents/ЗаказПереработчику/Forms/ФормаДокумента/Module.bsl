&НаСервере
Процедура ОбновитьНазначениеОбеспеченияМатериалов()
	
	НазначенияГрупп = Новый Соответствие;
	СтруктураОтбора = Новый Структура;
	
	Для Каждого ТекСтрока Из Объект.Материалы Цикл
		
		НазначениеГруппы = НазначенияГрупп[ТекСтрока.НомерГруппыЗатрат];
		Если НазначениеГруппы = Неопределено Тогда
			
			СтруктураОтбора.Вставить("НомерГруппыЗатрат", ТекСтрока.НомерГруппыЗатрат);
			
			НайденныеСтроки = Объект.Продукция.НайтиСтроки(СтруктураОтбора);
			Если НайденныеСтроки.Количество() = 1 Тогда
				НазначениеГруппы = НайденныеСтроки[0].Назначение;
				НазначенияГрупп.Вставить("ТекСтрока.НомерГруппыЗатрат", НазначениеГруппы);
			КонецЕсли;
			
		КонецЕсли;
		
		Если Не ЗначениеЗаполнено(ТекСтрока.Назначение) Тогда
			ТекСтрока.НазначениеОбеспечения = НазначениеГруппы;
		Иначе
			ТекСтрока.НазначениеОбеспечения = ТекСтрока.Назначение;
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

