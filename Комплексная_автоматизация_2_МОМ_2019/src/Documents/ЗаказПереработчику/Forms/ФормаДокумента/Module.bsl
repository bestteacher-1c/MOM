				И Объект.Материалы.Итог("Цена") = 0 
				И Объект.Услуги.Итог("Сумма") = 0 Тогда
				
			ПересчитатьСуммы = Ложь;
			
		КонецЕсли;
		
		Если ПересчитатьСуммы Тогда
			
			ТекстВопроса = НСтр("ru='Пересчитать суммы в документе в валюту ""%Валюта%""?'");
