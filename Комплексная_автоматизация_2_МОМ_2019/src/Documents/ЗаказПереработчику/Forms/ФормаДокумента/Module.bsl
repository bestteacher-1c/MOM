			Строка.СуммаНДС = 0;
			Строка.СуммаСНДС = 0;
		КонецЦикла;
		
		ПриИзмененииСуммыУслуг(Форма);
		
		Форма.Объект.ЭтапыГрафикаОплаты.Очистить();
		
		Форма.НадписьЭтапыОплаты = ЭтапыОплатыКлиентСервер.НадписьЭтапыОплаты(Форма, Истина, Форма.Объект.СуммаСНДС);
		
