		?(ЗначениеЗаполнено(Дата), Дата, ТекущаяДатаСеанса()));
	
	Если ПартионныйУчетВерсии22 Тогда
		Дата = РасчетСебестоимостиПовтИсп.ДатаПереходаНаПартионныйУчетВерсии22() - 1;
	КонецЕсли;
	
