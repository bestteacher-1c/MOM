&НаСервере
Процедура ЗаполнитьСпецификациюВКоллекции(ТолькоНезаполненные)
	
	Если Объект.КроссТаблица Тогда
	    ТЧ = ПродукцияПоДатам;
	Иначе
		ТЧ = Объект.Продукция;
	КонецЕсли; 
	
	Если ТЧ.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	МассивСтрок = Новый Массив;
	МассивДанных = Новый Массив;
	
	Для каждого Строка Из ТЧ Цикл
		
		МассивСтрок.Добавить(Строка);
		
		ДанныеПоНоменклатуре = Новый Структура;
		ДанныеПоНоменклатуре.Вставить("Подразделение", Объект.Подразделение);
		ДанныеПоНоменклатуре.Вставить("Номенклатура", Строка.Номенклатура);
		ДанныеПоНоменклатуре.Вставить("Характеристика", Строка.Характеристика);
		ДанныеПоНоменклатуре.Вставить("НачалоПроизводства",
			?(ЗаполнятьСпецификациюПоПериодам И НЕ Объект.КроссТаблица,
				Строка[?(ЭтоРазборка, "ДатаЗапуска", "ДатаВыпуска")],
				Объект.НачалоПериода));
		
		МассивДанных.Добавить(ДанныеПоНоменклатуре);
		
	КонецЦикла;
	
	УправлениеДаннымиОбИзделиях.ЗаполнитьСпецификациюВСтроках(МассивСтрок, МассивДанных, ПараметрыВыбораСпецификаций,, ТолькоНезаполненные);
	
КонецПроцедуры

