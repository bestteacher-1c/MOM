&НаСервере
Процедура ПоказатьВхожденияПолуфабриката(Полуфабрикат, ИнтерактивныйРежим)
	
	ОтключитьОтборПоВхождениямПолуфабриката();
	
	Вхождения = РегистрыНакопления.ПланыПотребленияМатериалов.ПотребителиПолуфабриката(Полуфабрикат);
	
	Если НЕ ЗначениеЗаполнено(Вхождения) Тогда
		
		Если ИнтерактивныйРежим Тогда
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				НСтр("ru = 'Не найдены вхождения выбранного полуфабриката'"),
				Объект.Ссылка);
		КонецЕсли;
		
		Возврат;
		
	КонецЕсли;
	
	СтруктураПоиска = Новый Структура;
	Для каждого Колонка Из Вхождения.Колонки Цикл
		СтруктураПоиска.Вставить(Колонка.Имя);
	КонецЦикла;
	УстановитьОтбор = Ложь;
	
	Для каждого Вхождение Из Вхождения Цикл
		
		ЗаполнитьЗначенияСвойств(СтруктураПоиска, Вхождение);
		НайденныеСтроки = Полуфабрикаты.НайтиСтроки(СтруктураПоиска);
		
		Если НайденныеСтроки.Количество() > 0 Тогда
			
			УстановитьОтбор = Истина;
			
			Для каждого Строка Из НайденныеСтроки Цикл
				Строка.Отображать = Истина;
			КонецЦикла;
			
		ИначеЕсли ИнтерактивныйРежим Тогда
				
			ТекстСообщения = СтрШаблон(
				НСтр("ru = 'Полуфабрикат %1 входит в продукцию %2, спецификация %3'"),
				НоменклатураКлиентСервер.ПредставлениеНоменклатуры(Полуфабрикат.Номенклатура, Полуфабрикат.Характеристика),
				НоменклатураКлиентСервер.ПредставлениеНоменклатуры(Вхождение.Номенклатура, Вхождение.Характеристика),
				Строка(Вхождение.Спецификация));
			
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения, Объект.Ссылка);
			
		КонецЕсли;
		
	КонецЦикла;
	
	Если УстановитьОтбор Тогда
		
		Элементы.Полуфабрикаты.ОтборСтрок = Новый ФиксированнаяСтруктура("Отображать", Истина);
		
		ПолуфабрикатыОтбор = Полуфабрикат;
		
		ПоказатьИнформационныйТекст(Полуфабрикат);
		
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ПоказатьИнформационныйТекст(Полуфабрикат)
	
	МассивСтрок = Новый Массив;
		
	МассивСтрок.Добавить(НСтр("ru = 'Установлен отбор по вхождениям полуфабриката'"));
	МассивСтрок.Добавить(" ");
	МассивСтрок.Добавить(
		НоменклатураКлиентСервер.ПредставлениеНоменклатуры(Полуфабрикат.Номенклатура, Полуфабрикат.Характеристика));
	МассивСтрок.Добавить(", ");
	МассивСтрок.Добавить(НСтр("ru = 'спецификация'"));
	МассивСтрок.Добавить(" ");
	МассивСтрок.Добавить(Строка(Полуфабрикат.Спецификация));
	МассивСтрок.Добавить(" (");
	
	КомандаОтключить = Новый ФорматированнаяСтрока(
		НСтр("ru = 'отключить'"),
		,
		,
		, 
		ЗначениеГиперссылкиОтключитьОтборПоВхождениямПолуфабриката());
	МассивСтрок.Добавить(КомандаОтключить);
	
	МассивСтрок.Добавить(")");
	
	ИнформационныйТекст = Новый ФорматированнаяСтрока(МассивСтрок);
	Элементы.ИнформационныйТекст.Видимость = Истина;
	
КонецПроцедуры

