			//-- НЕ УТ
			Тогда
			
			Соглашение = Справочники.СоглашенияСКлиентами.ПустаяСсылка();
			
		Иначе
			Соглашение = Справочники.СоглашенияСПоставщиками.ПустаяСсылка();
		КонецЕсли;
		
	КонецЕсли;
	
	ЗаполнитьНалогообложениеНДС();
	
