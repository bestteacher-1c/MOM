Функция ПолучитьПериодПоПоказателю(ПериодСтрокой)
	
	МассивЗначенийПериода = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(ПериодСтрокой, ".");
	
	Если Не МассивЗначенийПериода.Количество() = 3 Тогда
		Возврат Дата(1,1,1);
	КонецЕсли;
	
	ПериодичностьНалога = МассивЗначенийПериода.Получить(0);
	НомерПериода = МассивЗначенийПериода.Получить(1);
	Год = МассивЗначенийПериода.Получить(2);
	
	Если ПериодичностьНалога = "МС" Тогда
		Месяц = НомерПериода;
		Число = "1";
	ИначеЕсли ПериодичностьНалога = "КВ" Тогда
		Если НомерПериода = "01" Тогда
			Месяц = "01";
		ИначеЕсли НомерПериода = "02" Тогда
			Месяц = "04";
		ИначеЕсли НомерПериода = "03" Тогда
			Месяц = "07";
		ИначеЕсли НомерПериода = "04" Тогда
			Месяц = "10";
		КонецЕсли;
		Число = "1";
	ИначеЕсли ПериодичностьНалога = "ПЛ" Тогда
		Месяц = ?(НомерПериода = "01", "1", "6");
		Число = "1";
	ИначеЕсли ПериодичностьНалога = "ГД" Тогда
		Месяц = "1";
		Число = "1";
	Иначе
		Месяц = НомерПериода;
		Число = "1";
	КонецЕсли;
	
	Возврат Дата(Год, Месяц, Число);
	
КонецФункции

