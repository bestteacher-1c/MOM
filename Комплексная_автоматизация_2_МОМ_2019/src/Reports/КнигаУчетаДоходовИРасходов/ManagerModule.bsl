	ИтогПечДоходыБУ  = 0;
	ИтогПечРасходыБУ = 0;
	ИтогПечДоходы    = 0;
	ИтогПечРасходы   = 0;
	ПечДоходыБУ      = 0;
	ПечРасходыБУ     = 0;
	ПечДоходы        = 0;
	ПечРасходы       = 0;
	
