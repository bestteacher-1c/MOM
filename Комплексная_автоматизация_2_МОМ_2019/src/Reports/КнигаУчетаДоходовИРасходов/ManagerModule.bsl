	Секция.Параметры.ПечТекстИтогов = СтрШаблон(НСтр("ru = 'Итого за %1 квартал'"), СтроковыеФункцииКлиентСервер.ПреобразоватьЧислоВРимскуюНотацию(РимскоеЧисло, Ложь));
