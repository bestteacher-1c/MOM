				Сообщить(ОписаниеОшибки());
				Сообщить("Удалите вручную строку из свойства ""Прочее оприходование за счет доходов""");
				
			КонецПопытки;
			
		КонецЕсли;
		
	Иначе
		
		СсылкаНаПрочееОприходованиеТоваров = Документы.ПрочееОприходованиеТоваров.ПустаяСсылка();
		НадоСоздаватьПрочееОприходованиеТоваров = Истина;
		
	КонецЕсли;
	
	Возврат СсылкаНаПрочееОприходованиеТоваров;
	
КонецФункции // ПолучитьСсылкуНаПриход()

